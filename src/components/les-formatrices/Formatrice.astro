---
const { imgSrc, fullname, label } = Astro.props;
---

<div class="flex items-center">
  <img
    src={imgSrc}
    class="border-downriver border-[3px] rounded-full w-[140px] h-[140px]"
    alt={fullname}
  />
  <p class="ml-6">
    <span class="font-bold text-lg">{fullname}</span>
    <br/>
    <span class="text-sm">{label}</span>
  </p>
</div>
