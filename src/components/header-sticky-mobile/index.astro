---
import Button from "../@commons/button/index.astro"
import IconNotification from "../@commons/icons/IconNotification.astro"
---

<style>
  #sticky-button {
    transform: translateY(-100%);
    transition: transform 400ms ease;
  }

  #sticky-button :global(a) {
    display: inline-block;
  }

  #sticky-button :global(a) :global(.front) {
    padding: 6px 20px 6px 20px
  }

  #sticky-button.show {
    transform: translateY(0);
  }
</style>

<div id="sticky-button" class="fixed w-full z-10 text-center bg-white pt-5 pb-4 border-b border-downriver xl:hidden">
  <Button href="#newsletter-anchor">
    <IconNotification slot="icon"/>
    <span slot="label">Me pr√©venir du lancement</span>
  </Button>
</div>

<script src={Astro.resolve('./index.ts')}></script>
