---
import cs from "classnames";
import Toolbox from "./Toolbox.astro"

const { index, title, items, toolbox } = Astro.props;

const defaultCSSClasses = ["content"];

if (index > 0) {
  defaultCSSClasses.push("md:hidden");
}
---
<style lang="scss">
  .item {
    position: relative;
    padding-left: 25px;

    &::before {
      @apply bg-blue rounded-full;

      position: absolute;
      content: "";
      width: 10px;
      height: 10px;
      left: 0;
      top: 8px;
    }
  }
</style>

<section
  role="region"
  id={`module${index}`}
  aria-labelledby={`module${index}_opener`}
  class={cs(defaultCSSClasses)}
>
  <div class="py-10 px-5 md:px-10 lg:px-0 lg:pl-32 lg:pt-20 lg:pb-32 lg:w-4/6">
    <header class="mb-10 text-xl leading-[36px] font-bold md:text-2xl md:leading-[32px]">{title}</header>

    <ul class="space-y-4">
      {items.map((item, index) => (
        <li class="item">{item}</li>
      ))}
    </ul>

    <div class="mt-10 md:mt-20 lg:w-5/6">
      <Toolbox items={toolbox} />
    </div>
  </div>
</section>
