---
import BlueTag from "../components/@commons/BlueTag.astro"
import BlueQuote from "../components/@commons/BlueQuote.astro"
import Screenshot from "../components/@commons/Screenshot.astro"
import Grid from "../components/@commons/Grid.astro"

import MobileStickyHeader from "../components/header-sticky-mobile/index.astro"
import Header from "../components/header/index.astro"
import Hero from "../components/hero/index.astro"
import CoursProposePar from "../components/cours-propose-par/index.astro"
import QuiAApprisALecole from "../components/qui-a-appris-a-lecole/index.astro"
import Bubbles from "../components/bubbles/index.astro"
import Signatures from "../components/signatures/index.astro"
import AnimerDesAteliers from "../components/animer-des-ateliers/index.astro"
import CaracteristiquesDuCours from "../components/caracteristiques-du-cours/index.astro"
import InclusDansCeCours from "../components/inclus-dans-ce-cours/index.astro"
import UneApprocheReponsable from "../components/une-approche-responsable/index.astro"
import Punchline from "../components/Punchline.astro"
import CoursBientotDisponible from "../components/cours-bientot-disponible/index.astro"
import NewsletterSignIn from "../components/newsletter-signin/index.astro"
import LesFormatrices from "../components/les-formatrices/index.astro"
import UneExpertiseEprouvee from "../components/une-expertise-eprouvee/index.astro"
import SommaireDuCours from "../components/sommaire-du-cours/index.astro"
import ObtenezUnCertificat from "../components/obtenez-un-certificat/index.astro"
import ALaFinDeCeCours from "../components/a-la-fin-de-ce-cours/index.astro"
import QuestionsFrequentes from "../components/questions-frequentes/index.astro"
import MentionsLegales from "../components/MentionsLegales.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" as="font" type="font/woff2" crossorigin="anonymous" href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet"/>
    <link
      rel="stylesheet"
      href={Astro.resolve("../styles/global.css")}
    />
    <meta name="viewport" content="width=device-width"/>
    <title>Animer des ateliers UX</title>
    <style>
      #newsletter-anchor {
        scroll-margin-block: 50vh;
      }
    </style>
  </head>

<body>
  <MobileStickyHeader />

  <div class="container">
    <Grid>
      <div id="header-wrapper" class="col-span-full mt-8">
        <Header />
      </div>

      <div class="col-span-full xl:col-start-2 xl:col-span-10 my-24 lg:my-36">
        <Hero />
      </div>
    </Grid>
  </div>

  <div class="bg-white py-32">
    <div class="container">
      <Grid>
        <div class="col-span-full xl:col-start-3 xl:col-span-7 ">
          <CoursProposePar />

          <div class="mt-16 xl:mt-24">
            <QuiAApprisALecole />
          </div>
        </div>
      </Grid>
    </div>

    <div class="my-32">
      <Bubbles/>
    </div>

    <div class="container">
      <Grid>
        <div class="col-span-full xl:col-start-4 xl:col-span-7">
          <Signatures />
        </div>
      </Grid>
    </div>
  </div>

  <div class="container">
    <Grid>
      <div class="col-span-full xl:col-span-6 mt-24">
        <AnimerDesAteliers />
      </div>

      <div class="col-span-full mt-16">
        <CaracteristiquesDuCours/>
      </div>

      <div class="col-span-full mt-24">
        <InclusDansCeCours />
      </div>
    </Grid>

    <Grid outerGap={false}>
      <div class="col-span-full mt-32">
        <SommaireDuCours />
      </div>
    </Grid>
  </div>

  <div class="mt-24 xl:mt-0">
    <ObtenezUnCertificat />
  </div>

  <div class="container">
    <div class="mt-24">
      <ALaFinDeCeCours />
    </div>

    <div class="my-24">
      <Grid outerGap={false}>
        <div class="col-span-full xl:col-start-2 xl:col-span-10">
          <UneApprocheReponsable />
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-white">
    <div class="container">
      <Grid>
        <div class="col-span-full full xl:col-start-3 xl:col-span-8 py-32">
          <Punchline text="Favoriser l'intelligence collective est le nouveau pouvoir du designer." />
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-magnolia py-24">
    <div class="container">
      <Grid>
        <div class="col-span-full xl:col-start-2 xl:col-span-7">
          <CoursBientotDisponible />

          <div id="newsletter-anchor" class="mt-12">
            <NewsletterSignIn id="0" />
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-white py-24">
    <div class="container">
      <Grid outerGap={false}>
        <div class="col-span-full xl:col-start-2 xl:col-span-10">
          <LesFormatrices />
        </div>
      </Grid>
    </div>

    <div class="mt-24 xl:mt-28">
      <div class="container">
        <UneExpertiseEprouvee />
      </div>
    </div>
  </div>

  <div class="bg-white">
    <div class="container">
      <Grid>
        <div class="col-span-full xl:col-start-2 xl:col-span-10 py-32">
          <Punchline text="Passer de la vision d'un jeu de Lego Ã  celle d'un outil de design tactique et imbattable !" />
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-magnolia py-24">
    <div class="container">
      <Grid>
        <div class="col-span-full xl:col-start-2 xl:col-span-7">
          <CoursBientotDisponible />

          <div class="mt-12">
            <NewsletterSignIn id="1" />
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-downriver pt-24">
    <div class="container">
      <Grid>
        <div class="mb-14 col-span-full xl:col-start-2 xl:col-span-10">
          <QuestionsFrequentes />
        </div>

        <div class="pb-10 col-span-full xl:col-start-2">
          <MentionsLegales />
        </div>
      </Grid>
    </div>
  </div>

  <script src={Astro.resolve('../components/newsletter-signin/index.ts')}></script>
</body>

</html>
