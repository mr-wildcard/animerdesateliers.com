---
import { Picture } from "astro:assets";

import PageLayout from "layouts/PageLayout.astro"
import BlueTag from "components/@commons/BlueTag.astro"
import BlueQuote from "components/@commons/BlueQuote.astro"
import Grid from "components/@commons/Grid.astro"

import Sticker1 from "images/stickers/sticker1.png"
import Sticker2 from "images/stickers/sticker2.png"
import Sticker4 from "images/stickers/sticker4.png"
import Sticker5 from "images/stickers/sticker5.png"

import StickyHeader from "components/header-sticky/index.astro"
import Header from "components/header/index.astro"
import Hero from "components/hero/index.astro"
import CoursProposePar from "components/cours-propose-par/index.astro"
import QuiAApprisALecole from "components/qui-a-appris-a-lecole/index.astro"
import Bubbles from "components/bubbles/index.astro"
import Signatures from "components/signatures/index.astro"
import AnimerDesAteliers from "components/animer-des-ateliers/index.astro"
import CaracteristiquesDuCours from "components/caracteristiques-du-cours/index.astro"
import InclusDansCeCours from "components/inclus-dans-ce-cours/index.astro"
import UneApprocheReponsable from "components/une-approche-responsable/index.astro"
import Punchline from "components/Punchline.astro"
import CoursBientotDisponible from "components/cours-bientot-disponible/index.astro"
import NewsletterSignIn from "components/newsletter-signin/index.astro"
import LesFormatrices from "components/les-formatrices/index.astro"
import UneExpertiseEprouvee from "components/une-expertise-eprouvee/index.astro"
import SommaireDuCours from "components/sommaire-du-cours/index.astro"
import ObtenezUnCertificat from "components/obtenez-un-certificat/index.astro"
import ALaFinDeCeCours from "components/a-la-fin-de-ce-cours/index.astro"
import QuestionsFrequentes from "components/questions-frequentes/index.astro"
import Footer from "components/Footer.astro"

const title = "Animer des ateliers UX - Cours en ligne"
const description = "Un cours interactif, complet et pragmatique, qui aide les designers à se lancer dans l’animation d’ateliers UX et design thinking"
---

<PageLayout
  title={title}
  description={description}
>
  <StickyHeader />

  <div class="container">
    <Grid>
      <div class="col-span-full mt-4">
        <Header />
      </div>

      <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-2 xl:col-span-10 my-24 lg:my-36">
        <Hero />
      </div>
    </Grid>
  </div>

  <div class="bg-white">
    <div class="container relative h-[215px] xl:h-[120px]">
      <Picture
        formats={['avif']}
        class="absolute w-[260px] h-[263px] left-[calc(50%-130px)] translate-y-[-65px] rotate-[-10deg] xl:left-0 xl:w-[300px] xl:h-[304px] xl:translate-y-[-220px]"
        src={Sticker1}
        width="300"
        height="304"
        loading="lazy"
        role="presentation"
      />
    </div>

    <div class="container">
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-3 xl:col-span-7 ">
          <CoursProposePar />

          <div class="mt-16 xl:mt-24">
            <QuiAApprisALecole />
          </div>
        </div>
      </Grid>
    </div>

    <div class="my-24">
      <Bubbles />
    </div>

    <div class="container">
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-4 xl:col-span-7">
          <Signatures />
        </div>
      </Grid>
    </div>

    <div class="container relative h-[230px] md:h-[290px] xl:h-[120px]">
      <Picture
        formats={['avif']}
        class="absolute w-[260px] h-[260px] left-[calc(50%-130px)] translate-y-[50px] md:translate-y-[110px] xl:left-auto xl:right-[100px] xl:translate-y-[25px] xl:w-[300px] xl:h-[300px]"
        src={Sticker2}
        width="300"
        height="300"
        loading="lazy"
        role="presentation"
      />
    </div>
  </div>

  <div class="container">
    <Grid>
      <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-span-7 mt-28">
        <AnimerDesAteliers />
      </div>

      <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-span-full mt-16">
        <CaracteristiquesDuCours/>
      </div>

      <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-span-full mt-24">
        <InclusDansCeCours />
      </div>
    </Grid>

    <Grid outerGap={false}>
      <div class="col-span-full mt-32">
        <SommaireDuCours />
      </div>
    </Grid>
  </div>

  <div class="mt-24 lg:mt-0">
    <ObtenezUnCertificat />
  </div>

  <div class="container">
    <div class="mt-24">
      <ALaFinDeCeCours />
    </div>

    <div class="mt-[260px] md:mt-[290px] mb-24">
      <Grid outerGap={false}>
        <div class="col-span-full xl:col-start-2 xl:col-span-10">
          <UneApprocheReponsable />
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-white">
    <div class="container relative">
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-3 xl:col-span-8 pt-24 pb-[240px] md:pb-[300px] xl:py-32">
          <Punchline text="Favoriser l'intelligence collective est le nouveau pouvoir du designer." />
        </div>
        <Picture
          formats={['avif']}
          class="absolute left-[calc(50%-113px)] bottom-[-44px] w-[226px] h-[260px] rotate-[16.36deg] md:right-[10%] xl:w-[270px] xl:h-[310px] xl:right-[70px] xl:left-auto xl:bottom-[-205px]"
          src={Sticker4}
          width="270"
          height="310"
          loading="lazy"
          role="presentation"
        />
      </Grid>
    </div>
  </div>

  <div class="bg-magnolia pt-20 pb-24">
    <div class="container">
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-2 xl:col-span-7">
          <CoursBientotDisponible />

          <div id="inscription-newsletter" class="mt-12 scroll-my-[50vh]">
            <NewsletterSignIn id="0" />
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-white pt-24">
    <div class="container">
      <Grid outerGap={false}>
        <div class="col-span-full xl:col-start-2 xl:col-span-10">
          <LesFormatrices />
        </div>
      </Grid>
    </div>

    <div class="mt-24 xl:mt-28">
      <div class="container">
        <UneExpertiseEprouvee />
      </div>
    </div>
  </div>

  <div class="bg-white">
    <div class="container pt-16 pb-24">
      <Picture
        formats={['avif']}
        class="mx-auto mb-6 w-[260px] h-[260px] rotate-[-4.96deg] md:translate-y-[-20px] md:mt-[60px] xl:translate-y-0 xl:w-[300px] xl:h-[300px]"
        src={Sticker5}
        width="300"
        height="300"
        loading="lazy"
        role="presentation"
      />
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-2 xl:col-span-10">
          <Punchline text="Passer de la vision d'un jeu de Lego à celle d'un outil de design tactique et imbattable !" />
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-magnolia py-24">
    <div class="container">
      <Grid>
        <div class="col-span-full md:col-start-2 md:col-span-6 xl:col-start-2 xl:col-span-7">
          <CoursBientotDisponible />

          <div class="mt-12">
            <NewsletterSignIn id="1" />
          </div>
        </div>
      </Grid>
    </div>
  </div>

  <div class="bg-downriver pt-16 lg:pt-24">
    <div class="container">
      <Grid>
        <div class="mb-14 col-span-full md:col-start-2 md:col-span-6 xl:col-start-2 xl:col-span-10">
          <QuestionsFrequentes />
        </div>

        <footer class="pb-10 col-span-full md:col-start-2 md:col-span-6 xl:col-start-2">
          <Footer linkToLegal={true} />
        </footer>
      </Grid>
    </div>
  </div>
</PageLayout>
