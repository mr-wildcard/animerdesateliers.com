---
import cs from "classnames";
import Toolbox from "./Toolbox.astro"

const { index, title, items, toolbox } = Astro.props;

const defaultCSSClasses = ["content"];

if (index > 0) {
  defaultCSSClasses.push("xl:hidden");
}
---
<style lang="scss">
  .item {
    @apply text-lg;

    position: relative;
    padding-left: 25px;

    &::before {
      @apply bg-blue rounded-full;

      position: absolute;
      content: "";
      width: 10px;
      height: 10px;
      left: 0;
      top: 8px;
    }

     @screen xl {
       &::before {
          top: 13px;
       }
     }
  }
</style>

<section
  role="region"
  id={`module${index}`}
  aria-labelledby={`module${index}_opener`}
  class={cs(defaultCSSClasses)}
>
  <div class="py-10 px-5 xl:px-10 xl:pl-32 xl:pt-20 xl:pb-32">
    <h3 class="mb-10 text-[26px] leading-[36px] font-bold xl:text-[32px] xl:leading-[42px]">{title}</h3>

    <ul class="space-y-4">
      {items.map((item, index) => (
        <li class="item">{item}</li>
      ))}
    </ul>

    <div class="mt-10 xl:mt-20 lg:w-5/6">
      <Toolbox items={toolbox} />
    </div>
  </div>
</section>
