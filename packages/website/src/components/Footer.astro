---
const { linkToLegal = false } = Astro.props;
---

<div class="text-sm text-white">
  <p class="mb-5 font-bold">
    {
      linkToLegal ? (
        <a href="/mentions-legales" class="underline">
          Mentions légales
        </a>
      ) : (
        "Mentions légales"
      )
    }
    &middot;
