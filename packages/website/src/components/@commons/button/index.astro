---
import Loader from "components/@commons/Loader.astro"

const { href } = Astro.props;
---

<style lang="scss">
  $easeBackIn: cubic-bezier(0.36, 0, 0.66, -0.56);
  $easeBackOut: cubic-bezier(0.34, 1.56, 0.64, 1);


  .pushable {
    position: relative;
    border: none;
    background: transparent;
    padding: 0;
    cursor: pointer;
    outline-offset: 4px;
    user-select: none;
    -webkit-tap-highlight-color: transparent;
  }

  .edge {
    @apply bg-downriver;

    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50px;
  }

  .front {
    @apply text-base bg-canary border-2 border-downriver font-bold;

    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    padding: 15px 28px 15px 24px;
    border-radius: 50px;
    will-change: transform;
    transform: translateY(-4px);
    transition: all 600ms cubic-bezier(0.3, 0.7, 0.4, 1);
  }

  .front .icon {
    @apply pr-3;
  }

  .pushable.loading .front,
  .pushable:hover .front {
    @apply bg-chiffon;

    transform: translateY(-6px);
    transition: transform 250ms cubic-bezier(0.3, 0.7, 0.4, 1.5);
  }

  .pushable:active .front,
  .pushable.loading .front {
    transform: translateY(-2px);
    transition: transform 34ms;
  }

  .pushable:focus:not(:focus-visible) {
    outline: none;
  }

  .loader {
    position: absolute;
    left: 20px;
    transform: scale(0);
    opacity: 0;
    transition: all 300ms;
  }

  .icon {
    transform: translateY(0);
    transition: transform 300ms $easeBackOut;
  }

  .pushable.loading {
    .loader {
      transition-timing-function: $easeBackOut;
      transition-delay: 150ms;
      transform: scale(1);
      opacity: 1;
    }

    .icon {
      transition-timing-function: ease-out;
      transform: translateY(-40px);
    }
  }
</style>

<!-- Thank you Josh :) -->
{!href && (
  <button class="pushable">
    <span class="edge" role="presentation" />
    <span class="front">
      <span class="icon">
        <slot name="icon" />
      </span>
      <slot name="label" />
      <span class="loader">
        <Loader />
      </span>
    </span>
  </button>
)}

{!!href && (
  <a href={href} class="block pushable">
    <span class="edge" role="presentation" />
    <span class="front">
      <slot name="icon" />
      <slot name="label" />
    </span>
  </a>
)}
