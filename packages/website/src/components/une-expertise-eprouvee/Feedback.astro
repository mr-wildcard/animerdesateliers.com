---
import BlueQuote from "components/@commons/BlueQuote.astro";

const { text, author } = Astro.props;
---
<style>
  .blue-quote :global(svg) {
    width: 34px;
    height: 25px;
  }

  @screen xl {
    .blue-quote :global(svg) {
      width: 48px;
      height: 35px;
    }
  }
</style>

<div class="flex flex-col xl:flex-row">
  <div class="blue-quote mb-5 xl:mr-6">
    <BlueQuote width="34" height="25" />
  </div>
  <figure class="text-lg leading-[26px] xl:translate-y-[12px]">
    <blockquote class="mb-5">
      <p class="xl:text-xl">
        {text}
      </p>
    </blockquote>
    <figcaption class="font-bold">
      {author}
    </figcaption>
  </figure>
</div>
