---
import BlueQuote from "components/@commons/BlueQuote.astro";

const { text, author } = Astro.props;
---

<div class="flex flex-col xl:flex-row">
  <div class="mb-5 xl:mr-6">
    <span class="xl:hidden">
      <BlueQuote width="34" height="25" />
    </span>
    <span class="hidden xl:block">
      <BlueQuote width="48" height="35" />
    </span>
  </div>
  <figure class="text-base leading-[26px] xl:translate-y-[12px]">
    <blockquote class="mb-5">
      <p class="xl:text-xl">
        {text}
      </p>
    </blockquote>
    <figcaption class="font-bold">
      {author}
    </figcaption>
  </figure>
</div>
