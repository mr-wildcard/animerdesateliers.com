---
import Button from "components/@commons/Button.astro"
import IconNotification from "components/@commons/icons/IconNotification.astro"

const desktopMinWidth = tailwindConfig.theme.screens.xl;
---

<style>
  #sticky-button :global(a) {
    display: inline-block;
  }

  #sticky-button :global(a) :global(.front) {
    padding: 6px 20px 6px 20px
  }
</style>

<div id="sticky-button"
     class="sticky top-0 w-full z-10 text-center bg-white pt-5 pb-4 border-b border-downriver xl:hidden"
     data-desktop-min-width={desktopMinWidth}
>
  <Button href="#inscription-newsletter">
    <IconNotification slot="icon"/>
    <span slot="label">Me pr√©venir du lancement</span>
  </Button>
</div>

<script src={Astro.resolve('./index.ts')}></script>
