---
import Button from "components/@commons/Button.astro";
import IconNotification from "components/@commons/icons/IconNotification.astro";
---

<style>
  #sticky-header {
    background-color: white;
  }

  #sticky-header.overlapping-header {
    transition: transform 250ms ease-out;
  }

  #sticky-header :global(a) {
    display: inline-block;
  }

  #sticky-header :global(a) :global(.front) {
    padding: 6px 20px 6px 20px;
  }
</style>

<div
  id="sticky-header"
  class="sticky top-0 w-full z-10 text-center pt-5 pb-4 border-b border-downriver md:fixed md:-translate-y-full"
>
  <Button href="#inscription-newsletter">
    <IconNotification slot="icon" />
    <span slot="label">Me pr√©venir du lancement</span>
  </Button>
</div>

<script src="./index.ts"></script>
