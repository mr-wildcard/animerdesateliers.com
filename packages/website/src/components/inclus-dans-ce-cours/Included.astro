---
const { title, description } = Astro.props;
---

<div class="text-center">
  <span class="inline-block mx-auto" role="presentation">
    <slot name="icon" />
  </span>
  <p class="mt-6 font-bold text-lg xl:mb-5 xl:text-[22px] leading-[32px]">{title}</p>
  <p class="text-lg leading-6 xl:text-xl">{description}</p>
</div>
